@{
    Page.Title = "TextBoxes Demo";
    //Layout = "~/_LayoutMenu.cshtml";

    var controlnamevariable = Request.Form["controlname"];
}

<div>
    @if (IsPost)
    {
        <p>You entered &gt; @controlnamevariable &lt; </p>
    }
    <form id="theform" action="" method="post">
        <div class="form-group">
            <label for="controlnameid">FieldLabel:</label>
            <input type="text" name="controlname" id="controlnameid" placeholder="enter some data"/>            
        </div>
        <div class="form-group">
            <button type="submit" name="formbutton" id="formbuttonid" class="btn btn-primary" value="Submit">Button</button>
        </div>

    </form>

    
</div>