@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "DropDownList";
}

@section banner { 
    <h1>DropDownList (select tag) on Form</h1>    
}

@if (IsPost)
{
    var choice = Request.Form["CodingSamples"];
    switch (choice.ToUpper())
    {
        case "TEXTBOX":
            {
                //To go to another page use the  . Redirect("pagename") method of the Response object
                Response.Redirect("BasicForm.cshtml");
                break;
            }
            case "RADIOBUTTON":
            {
                Response.Redirect("RadioButtons.cshtml");
                break;
            }
            case "CHECKBOX":
            {
                Response.Redirect("CheckBoxes.cshtml");
                break;
            }

        default:
            {
                <p style="color:firebrick">To view a sample, make a selection from the sample list.</p>
                break;
            }
    }

}
else
{

}

<form id="theform" method="post">
    <div class="row">
        <div class="offset-1">
            <label id="lblCodingSamples">Select the sample to view: </label>&nbsp;&nbsp;
            <!--The select tag is used in html to create the dropdownlist. Each Item in the ddl is specified using an option tag.
        The option tag will have a value attribute, this is the returned value between the open and closed of the option
        tag is the visible text to be read. To set an item as the chosen item use the attribute selected within the option tag.-->
            <select id="CodingSample" name="CodingSamples">
                <option value="">select ...</option>
                <option value="TextBox">TextBox</option>
                <option value="RadioButton">RadioButton</option>
                <option value="CheckBox">CheckBox</option>
            </select>&nbsp;&nbsp;
            <button type="submit" id="theButton" name="theButton" value="submit" class="btn btn-primary">Go To ...</button>
        </div>
    </div>
</form>